extends layout

block content
  h1= title
  - var sentence_desc = description.charAt(0).toUpperCase() + description.slice(1) + '.';
  p #{sentence_desc}
  br

  b Location:
  select(id='input-location' name="input-location" value='babcock' lat='0' long='0')
    option(value='babcock' lat='0' long='0') Babcock
    option(value='mountainview' lat='100' long='100') Mountainview
    option(value='westside' lat='100' long='-100') Westside
  b Continuous Refresh
  input(id='input-live-refresh' onclick='getData()' type='checkbox', name='input-live-refresh', checked)


  div(id='dark-sky-data')
    p= data
